    <title>Approve</title>
</head>
<body>
    <h1>Approve</h1>
    <hr>
    <form action="/applicantList/<%= result.CompanyId %>/approve/<%= result.id %>" method="post">
    <label for="name">Name</label><br>
    <input type="text" name="fullName" value = <%= result.User.fullName %>><br>
    <label for="email">Email</label><br>
    <input type="text" name="email" value="<%= result.User.email %> "><br>
    <label for="interview">Interview Date</label><br>
    <input type="date" name="interviewDate"><br>
    <input type="submit" value="Save">
    </form>
